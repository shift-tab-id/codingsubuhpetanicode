<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Latihan Variable</title>

    <script>
        // deklarasi variable
        var nama = "Nedved";
        var saldo = 100000;
        let isMember = false;
    </script>
</head>
<body>
    <h1>Status Akun Anda</h1>
    <p>Nama : <b id="outputNama"></b></p>
    <p>Saldo : <b id="outputSaldo"></b></p>
    <p>Member : <b id="outputMember"></b></p>

    <script>
        // isi ulang variable
        nama = prompt("Isi nama anda");
        saldo = prompt("Isi deposit anda");
        isMember = confirm("Anda akan diset menjadi member");

        outputNama.textContent = nama;
        outputSaldo.textContent = saldo;
        outputMember.textContent = isMember;

    </script>
</body>
</html>
